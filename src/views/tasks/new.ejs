<%- include('../layouts/header', {title: 'Nova Listas'}) %> <%-
include('../layouts/menu') %>

<section class="section">
  <div class="container">
    <h1 class="title size-4">Nova Tarefa</h1>

    <form action="/checklists/<%= checklistId %>/tasks">
      <div class="field">
        <label class="label">Nome</label>
        <div class="control">
          <input
            class="input"
            type="text"
            name="checklist[name]"
            placeholder="Lista de Tarefas"
            value="<%= task.name %>"
          />

          <% if(tasks.error && task.errros.hasOwnProperty("name")) { %>
          <p class="is-danger help"><%= task.error.name.message %></p>
          <% } %>
        </div>
      </div>

      <button type="submit" class="button is-success">Salvar</button>
      <a href="/checklists/<%= checklistId %>" class="button">Cancelar</a>
    </form>
  </div>
</section>

